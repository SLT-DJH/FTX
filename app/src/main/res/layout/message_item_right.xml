<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp">

    <LinearLayout
        android:id="@+id/LN_message_right_layout"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="날짜"
            android:gravity="right"
            android:layout_gravity="bottom"
            android:layout_marginRight="5dp"
            android:textSize="10sp"
            android:textColor="@color/transparentGrey"/>

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_right_rect"
            android:padding="8dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="testing message"
            android:textColor="@color/White"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="bottom"
            android:background="@drawable/message_right_corner" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LN_image_message_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_image_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:textSize="10sp"
            android:text="날짜"
            android:textColor="@color/transparentGrey" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_message_right_image"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/iv_message_right_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>